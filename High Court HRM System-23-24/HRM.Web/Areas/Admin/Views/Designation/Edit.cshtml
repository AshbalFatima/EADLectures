@{
}


<h4>Edit Designation</h4>
<p class="text-danger">
</p>
<hr />
<div class="row">
    <form asp-action="Create" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input  type="hidden" asp-for="Id"/>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="DesignationTitle" class="control-label"></label>

                    <input asp-for="DesignationTitle" class="form-control" />
                    <span asp-validation-for="DesignationTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="BPSID" class="control-label"></label>
                    @*<input asp-for="AppointmentBPSId" class="form-control" />*@
                    @Html.DropDownListFor(t=>t.BPSID,((List<SelectListItem>)ViewBag.BPS) , "Select" ,new {@class="form-control"})

                    <span asp-validation-for="BPSID" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>

</div>