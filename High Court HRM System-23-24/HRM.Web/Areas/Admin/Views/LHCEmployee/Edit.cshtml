@model HRM.Models.ViewModels.LHCDataVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Update Employee</h1>
<div class="row">

    <form asp-action="Edit" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


  
    
    <input type="hidden" class="form-control" id="id" asp-for="Id">
  
  <div class="form-group">
    <label for="cnic">CNIC</label>
    <input type="text" class="form-control" id="cnic" asp-for="CNIC">
  </div>
  <div class="form-group">
    <label for="personalNumber">Personal Number</label>
    <input type="text" class="form-control" id="personalNumber" asp-for="PersonalNumber">
  </div>
  <div class="form-group">
    <label for="fullName">Full Name</label>
    <input type="text" class="form-control" id="fullName" asp-for="FullName">
  </div>
  <div class="form-group">
    <label for="fatherName">Father Name</label>
    <input type="text" class="form-control" id="fatherName" asp-for="FatherName">
  </div>
  <div class="form-group">
    <label for="mobileNumber">Mobile Number</label>
    <input type="text" class="form-control" id="mobileNumber" asp-for="MobileNumber">
  </div>
  























        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>

</div>