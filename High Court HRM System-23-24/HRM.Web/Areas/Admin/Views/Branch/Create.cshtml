@model HRM.Models.ViewModels.BranchVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Create New Branch</h1>
<div class="row">

    <form asp-action="Create" method="post" >

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        

        <div class="info-section">
            <h4 class="title">Create Branches</h4>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="ParentBranchId" class="control-label"></label>
                        @Html.DropDownListFor(t=>t.ParentBranchId ,((List<SelectListItem>)ViewBag.ParentBranches) , "Select" ,new {@class="form-control" , id="ParentBranchId"})
                        <span asp-validation-for="ParentBranchId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">

                    <div class="form-group">
                        <label asp-for="BranchName" class="control-label"></label>
                        <input asp-for="BranchName" class="form-control"  />
                        <span asp-validation-for="BranchName" class="text-danger"></span>
                    </div>

                </div>
                
            </div>
   
            <!-- Attachments Start-->
          
            <!-- Attachments End-->
            <hr />
        </div>






















        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

</div>

