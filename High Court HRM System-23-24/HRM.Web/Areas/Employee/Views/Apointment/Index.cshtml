@model IEnumerable<HRM.Models.Appointment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentAs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentAsId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentBPS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentBPSId)
            </th>
         
            <th>
                @Html.DisplayNameFor(model => model.DateOfAppointmentLetter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuotaId)
            </th>
            
    
          
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentAs)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentBPS)
            </td>
            
            
            <td>
                @Html.DisplayFor(modelItem => item.DateOfAppointmentLetter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quota)
            </td>
            
    
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
