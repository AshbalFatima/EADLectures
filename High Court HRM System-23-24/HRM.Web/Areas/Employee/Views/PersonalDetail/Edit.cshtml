                        <span asp-validation-for="CurrentDesignationId" class="text-danger"></span>
                    </div>
                     </div>
                 <div class="form-group" id="divCurrentDesignationOther" @(Model.CurrentDesignation!=null && Model.CurrentDesignation.ToUpper()=="OTHER" ? "" : "style=display:none;")>
