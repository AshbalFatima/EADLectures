                    <div class="form-group">
                        <label asp-for="PersonnelNumber" class="control-label"></label>
                        <input asp-for="PersonnelNumber" class="form-control" readonly="true" />
                        <span asp-validation-for="PersonnelNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">

                <div class="col">
                    <div>
                    <div class="form-group">
                        <label asp-for="CurrentDesignationId" class="control-label"></label>
