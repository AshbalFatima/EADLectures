            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="EmergencContactRelation" class="control-label"></label>
                    <input asp-for="EmergencContactRelation" class="form-control" />
                    <span asp-validation-for="EmergencContactRelation" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" readonly="true" />
                    <span asp-validation-for="Email" class="text-danger"></span>
