                    <input type="hidden" name="DateOfChargeAssumption_FOR" id="DateOfChargeAssumption" value="@(Model.DateOfChargeAssumption.HasValue? Model.DateOfChargeAssumption.Value.ToString("dd-MMM-yyyy") : "" )"/>
