@model HRM.Models.ViewModels.AppointmentVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}



<h4>Appointment Details( Lahore High Court ) - Detail</h4>
<hr />
<div>


    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppointmentAs)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppointmentAs)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppointmentBPS)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppointmentBPS)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfAppointmentLetter)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfAppointmentLetter)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfChargeAssumption)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfChargeAssumption)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppiontmentLetterURL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayForImage(model => model.AppiontmentLetterURL,Model.AppiontmentLetterURL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quota)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quota)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModeOfAppointment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModeOfAppointment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JoinThroughProperChannel)
        </dt>
        <dd class="col-sm-10">
            @(Model.JoinThroughProperChannel?"Yes":"No")
            @if (Model.JoinThroughProperChannel)
            {
                <br />
                @if (Model.JoinThroughProperChannel)
                {
                    <a href="/Employee/ServiceHistor/Details/@Model.ServiceHistoryId" class="">@Model.ServiceHistoryText</a>
                }


            }
        </dd>

    </dl>
